{
    "name": "jan-herman/kirby-barista",
    "description": "Enable Latte Template Engine for Kirby 3",
    "version": "1.0.0",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan Herman",
            "email": "mail@janherman.com",
            "homepage": "https://janherman.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "getkirby/composer-installer": "^1.2",
        "latte/latte": "^3.0"
    },
    "extra": {
		"installer-name": "barista"
	},
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "JanHerman\\Barista\\": "lib/"
        }
    }
}
